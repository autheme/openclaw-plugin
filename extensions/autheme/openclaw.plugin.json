{
  "id": "autheme",
  "name": "authe.me Trust Scoring",
  "version": "0.2.0",
  "description": "Real-time agent trust scoring and tamper-proof audit trails",
  "author": "authe.me",
  "entry": "src/plugin.ts",
  "hooks": [
    "after_tool_call",
    "agent_end"
  ],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiEndpoint": {
        "type": "string",
        "default": "https://api.authe.me",
        "description": "authe.me API base URL"
      },
      "agentToken": {
        "type": "string",
        "description": "JWT token for this agent (get from dashboard.authe.me)"
      },
      "allowedTools": {
        "type": "array",
        "items": { "type": "string" },
        "default": [],
        "description": "Tool allowlist. Empty means all tools allowed."
      },
      "latencyThreshold": {
        "type": "number",
        "default": 30000,
        "description": "Flag tool calls slower than this (ms)"
      },
      "logLocally": {
        "type": "boolean",
        "default": true,
        "description": "Log trust scores to OpenClaw gateway logs"
      },
      "verbose": {
        "type": "boolean",
        "default": false,
        "description": "Log every tool call individually"
      }
    }
  },
  "uiHints": {
    "agentToken": { "label": "Agent Token", "sensitive": true },
    "apiEndpoint": { "label": "API Endpoint", "placeholder": "https://api.authe.me" },
    "allowedTools": { "label": "Allowed Tools" },
    "latencyThreshold": { "label": "Latency Threshold (ms)" },
    "logLocally": { "label": "Log Locally" },
    "verbose": { "label": "Verbose Logging" }
  }
}
